<%= form_with(model: @event) do |form| %>
    <div class="form-field">
        <%= form.label :name %>
        <%= form.text_field :name %>
        <% if @event.errors.full_messages_for(:name).any? %>
            <% @event.errors.full_messages_for(:name).each do |message| %>
                <div><%= message %></div>
            <% end %>
        <% end %>
    </div>
    
    <div class="form-field">
        <%= form.label :date %>
        <%= form.text_field :date %>
        <% if @event.errors.full_messages_for(:date).any? %>
            <% @event.errors.full_messages_for(:date).each do |message| %>
                <div><%= message %></div>
            <% end %>
        <% end %>
    </div>

    <div class="form-field">
        <%= form.label :location %>
        <%= form.text_field :location %>
        <% if @event.errors.full_messages_for(:location).any? %>
            <% @event.errors.full_messages_for(:location).each do |message| %>
                <div><%= message %></div>
            <% end %>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>

<%= link_to "Back to Events", root_path %>